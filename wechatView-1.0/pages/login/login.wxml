
<view class="weui-form__control-area">
	  <view class="page__bd">
      <view class="section__ctn">
        <image style="width: 24rem; height: 13rem; background-color: #eeeeee;" mode="{{item.mode}}" src="{{src}}"></image>
      </view>
    </view>
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">账号</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" name="userName" type="number" placeholder="请输入账号" value="" bindinput="userNameInput" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active weui-cell_vcode">
						<view class="weui-cell__hd"><label class="weui-label">密码</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" name="userPwd" type="text" placeholder="输入密码" bindinput="passWdInput" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
					<view class="button-sp-area"><a class="weui-btn weui-btn_primary" bindtap="give" bindtap="login">登录</a></view>
				</view>
			</view>
			<view class="page__bd page__bd_spacing">	
		<view class="weui-footer weui-footer_fixed-bottom">
			<view class="weui-footer__links">
				<a href="javascript:home();" class="weui-footer__link" bindtap="jumpPage">注册账户</a>
				<a href="javascript:home();" class="weui-footer__link">忘记密码</a>
				<a href="javascript:home();" class="weui-footer__link" bindtap="jumpRegisterPhone">手机登录</a>
			</view>
			<view class="weui-footer__text">make monitoring easy</view>
		</view>
	</view>
		</view>
